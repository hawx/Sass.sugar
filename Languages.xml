<?xml version="1.0" encoding="UTF-8"?>

<settings>

	<language id="styling.sass">
		
		<!-- Note: root-zone will be deprecated in the next beta and replaced by syntax-name -->
		<root-zone>styling.sass</root-zone>
		<name>SASS</name>
		<detectors>
			<extension>sass</extension>
			<extension>scss</extension>
		</detectors>
		
		<default-extension>sass</default-extension>
		
	</language>
	
	<meta>
		<name>SASS</name>
		<author>Joshua Hawxwell</author>
		<download format="git">git://github.com/hawx/Sass.sugar.git</download>
		<url>http://github.com/hawx/Sass.sugar</url>
	</meta>
	
</settings>
